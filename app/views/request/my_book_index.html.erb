<div class="table-wrapper-scroll-y my-custom-scrollbar">
<table class="table table-striped table-bordered table-md ">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Book Name</th>
      <th scope="col">Author Name</th>
      <th scope="col">Borrowed date</th>
      <th scope="col">Due date</th>
      <th scope="col">Status</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
 
  <% @loanedbooks.each do |loaned_book|  %>
    <tr>
      <td><%= loaned_book.id %></td> 
      <td><%= loaned_book.book.title %></td>
      <td><%= loaned_book.book.author.name %></td>
      <td><%= loaned_book.loaned_date.to_date %></td>
      <td><%= loaned_book.due_date.to_date %></td>
      <td><%= loaned_book.status %></td>
      <% if loaned_book.status == LoanedBook::STATUS[:approved] %>
        <td><%= link_to 'RETURN', {controller: "request",action: "request_to_return", id: loaned_book.id }, method: :get ,class: "btn btn-primary" %></td>
      <% else %>
        <td></td>
      <% end %>
    </tr>
  <% end  %>
</tbody>
</table>
</div>