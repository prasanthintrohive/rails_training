<table class="table  table-bordered table-striped table-md overflow-auto" id="add-table">
  <thead>
    <tr>
      <th scope="col">S.no</th>
      <th scope="col">Book</th>
      <th scope="col">Author</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody id="table-row">
  <% books.each_with_index do |book, index|  %>
    <%= render partial: "book_row", locals: { book: book, index: index} %>
  <% end  %>
  </tbody>
</table>
