<h2>Add Authors</h2>

<%= form_with scope: :author, url: author_create_author_path(@author)  do |f| %>
  <br>
  <div class= "row">
    
    <div class= "col-md-3">
      <%= f.text_field :name, placeholder: 'Name', class:"form-control " %>
    </div>  
    <div class= "col-md-3">
      <%= f.submit 'add', class:"btn btn-secondary" %>
    </div>    
  </div>
<% end %>
<br>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">S.no</th>
      <th scope="col">Author</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>

  <% @author.each_with_index do |author,index|  %>
    <tr>
      <td><%= index+1 %></td>
      <td><%= author.name %></td>
      <td>
        <%= link_to  edit_author_path(author) do %>
          <i class="fa fa-pencil-square-o" aria-hidden="true" id = 'icons'></i>
        <% end %>
      </td>
      <td>
        <%= button_to "Delete",{action: :destroy, id: author.id}, method: :delete, class:"btn btn-danger"%>
      </td>    
    </tr>
  <% end  %>
  </tbody>
</table>


