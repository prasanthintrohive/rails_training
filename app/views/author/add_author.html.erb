<%= form_with scope: :author, url: author_create_author_path(@author)  do |f| %>
  <br>
  <div class= "row">

    <div class= "col-md-3">
      <%= f.text_field :name, placeholder: 'Name', class:"form-control " %>
    </div>  
    <div class= "col-md-3">
      <%= f.submit 'add', class:"btn btn-secondary" %>
    </div>    
  </div>
<% end %>
<br>

<table class="table table-striped table-bordered table-md overflow-auto" style="height:100px" >
  <thead>
    <tr>
      <th scope="col">S.no</th>
      <th scope="col">Author</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>

  <% @author.each_with_index do |author,index|  %>
    <tr>
      <td><%= index+1 %></td>
      <td><%= author.name %></td>
      <td>
        <%= link_to  edit_author_path(author) do %>
          <i class="fa fa-pencil-square-o" aria-hidden="true" id = 'icons'></i>
        <% end %>
      </td>
      <td>
        <%= link_to "/author/destroy_me/#{author.id}", data: { confirm: 'Are you sure?' , turbo: "false", id: author.id}, class:"trash" do%>
          <i class="fa fa-trash" aria-hidden="true" id="trash"></i>
        <% end %>
      </td>    
    </tr>
  <% end  %>
  </tbody>
</table>