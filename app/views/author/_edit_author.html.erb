<%= form_with model: @author, url: ajax_edit_path, method: :patch, local: true do |f| %>
  <br>
  <div class= "row">
    <div class= "col-md-3">
      <%= f.text_field :name,placeholder: 'Add author', class:"form-control " %>
    </div>  
    <div class= "col-md-3">
      <%= f.submit 'Update', class:"btn btn-secondary" %>
    </div>    
  </div>
<% end %>