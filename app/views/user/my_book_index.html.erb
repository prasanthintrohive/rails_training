<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">S.no</th>
      <th scope="col">Book Name</th>
      <th scope="col">Author Name</th>
      <th scope="col">Borrowed date</th>
      <th scope="col">Due date</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
 

  <% @loanedbook.each_with_index do |l,index|  %>
  <% if l.status == "approved" and l.user_id == current_user.id %>
    <tr>
      <td><%= index+1%></td> 
      <td><%= l.book.title %></td>
      <td><%= l.book.author.name %></td>
      <td><%= l.loaned_date.to_date %></td>
      <td><%= l.due_date.to_date %></td>
     <td><%= link_to 'RETURN',{controller: "user",action: "request_to_return", id: l.id }, method: :get ,class: "btn btn-primary" %></td>
    </tr>
   <% end %>
  <% end  %>
</tbody>
</table>